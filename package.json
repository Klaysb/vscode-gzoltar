{
	"name": "vscode-gzoltar",
	"displayName": "GZoltar",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/pom.xml",
		"workspaceContains:**/build.xml",
		"workspaceContains:**/build.gradle",
		"workspaceContains:**/WORKSPACE"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"explorer/context": [
				{
					"command": "gzoltar.setsource",
					"group": "gzoltar",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "gzoltar.settest",
					"group": "gzoltar",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "gzoltar-commands",
					"title": "GZoltar",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"gzoltar-commands": [
				{
					"id": "gzoltar",
					"name": "Commands"
				}
			]
		},
		"commands": [
			{
				"command": "gzoltar.setsource",
				"title": "GZoltar: Set Source Folder"
			},
			{
				"command": "gzoltar.settest",
				"title": "GZoltar: Set Test Folder"
			},
			{
				"command": "gzoltar.run",
				"title": "Run GZoltar",
				"icon": {
					"light": "resources/light/boolean.svg",
					"dark": "resources/dark/boolean.svg"
				}
			},
			{
				"command": "gzoltar.reset",
				"title": "Reset Config Folder",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/fs-extra": "^8.1.0",
		"fs-extra": "^9.0.0"
	}
}
